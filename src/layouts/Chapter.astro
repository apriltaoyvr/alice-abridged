---
export interface Props {
  title?: string;
  frontmatter?: {
    title: string;
    chapter: number;
  };
}

import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
const { title, frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/ico' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <title>{frontmatter.title ? frontmatter.title : title}</title>
  </head>
  <body>
    <Navbar />
    <article
      class='flex flex-col place-content-center place-items-center min-w-full sm:prose-sm md:prose-base lg:prose-xl font-serif'
    >
      <slot />
    </article>
    <Footer chapter={frontmatter.chapter} />
  </body>
  <style is:global>
    p {
      max-width: 65ch;
    }
  </style>
</html>
