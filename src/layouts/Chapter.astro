---
export interface Props {
  title?: string;
  frontmatter?: {
    title: string;
    chapter: number;
  };
}

import Navbar from '@/components/Navbar.astro';
import Footer from '@/components/Footer.astro';
const { title, frontmatter } = Astro.props;
import '@fontsource/bitter';
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/ico' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <title>{frontmatter.title ? frontmatter.title : title}</title>
    <script is:inline>
      // ‚òùÔ∏è This script prevent the FART effect.
      if (localStorage.getItem('theme') === null) {
        document.documentElement.setAttribute('data-theme', 'light');
      } else
        document.documentElement.setAttribute(
          'data-theme',
          localStorage.getItem('theme')
        );
      // "theme" LocalStorage value is set by the package to remember user preference.
      // The value is checked and applyed before rendering anything.
    </script>
    <script>
      import { themeChange } from 'theme-change';
      themeChange();
      // üëÜ you could import the CDN directly instead of these two lines
    </script>
  </head>
  <body>
    <Navbar />
    <article
      class='flex flex-col place-content-center place-items-center min-w-full sm:prose-sm md:prose-base lg:prose-xl'
    >
      <slot />
    </article>
    <Footer chapter={frontmatter.chapter} />
  </body>
  <style is:global>
    h1 {
      @apply pt-16;
    }

    p {
      @apply max-w-prose;
    }

    hr {
      @apply h-px my-8 border-0 bg-neutral w-[65ch];
    }

    blockquote {
      @apply border-l-4 border-neutral;
    }
  </style>
</html>
