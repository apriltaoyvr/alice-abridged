---
export interface Props {
  src: string;
  alt: string;
}
import { Image } from '@astrojs/image/components';
const { src, alt } = Astro.props;
import { LanguageSelector } from 'astro-i18next/components';
---

<figure class='text-center max-w-sm md:max-w-md lg:max-w-lg m-8'>
  <Image
    src={src}
    alt={alt}
    aspectRatio={796 / 1100}
    height={796}
    class='max-w-sm md:max-w-md lg:max-w-lg rounded-lg shadow-xl'
    draggable={false}
  />
  <figcaption>{alt}</figcaption>
</figure>
